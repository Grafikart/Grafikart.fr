{% extends 'base.html.twig' %}

{% block body %}
  <div class="page" style="max-width: 700px; margin-left: auto; margin-right: auto;">
    <div class="page__title">
      {{ post.title }}
    </div>

    <div class="page__content formatted">
      {{ post.content | markdown }}
    </div>

    {% include 'partials/comments.html.twig' with {content: post} only %}
  </div>
{% endblock %}

