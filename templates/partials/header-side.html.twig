<ul class="header-side">
  <li class="header__notification">
    <site-notifications></site-notifications>
  </li>
  <li class="header__search">
    <search-button></search-button>
  </li>
  {% if app.user %}
    <li class="header__account"><a href="{{ path('user_profil') }}">{{ icon('user') }} <span>{{ app.user.username }}</span></a>
    <li class="header__logout"><a href="{{ path('auth_logout') }}">{{ icon('logout') }} <span>Se déconnecter</span></a></li>
  {% else %}
    <li class="header-side__auth">
      <a href="{{ path('register') }}">{{ icon('user') }} <span>S'inscrire</span></a>
      <span class="text-muted">·</span>
      <a href="{{ path('auth_login', {redirect: app.request.pathInfo}) }}"><span>Se connecter</span></a>
    </li>
  {% endif %}
  <li class="header__burger">
    <button id="js-burger"><span>Afficher le menu</span></button>
  </li>
</ul>
