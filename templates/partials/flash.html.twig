{% for type, messages in app.session.flashbag.all() %}
  {% if floating is defined %}
    {% for message in messages %}
      <alert-floating type="{{ type }}" {% if duration is defined and type == 'success' %}duration="{{ duration }}"{% endif %}>
        {{ message | nl2br }}
      </alert-floating>
    {% endfor %}
  {% else %}
    {% for message in messages %}
      <alert-message type="{{ type }}">
        {{ message | nl2br }}
      </alert-message>
    {% endfor %}
  {% endif %}
{% endfor %}
