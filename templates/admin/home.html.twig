{% extends 'admin/base.html.twig' %}

{% block title 'Dashboard' %}

{% block body %}

  <div class="stack-large">



    {% if scheduled_jobs | length > 0 %}
      <section class="stack" style="--gap:1">
        <div class="flex">
          <h1 class="dashboard-title">
            {{ icon('warning') }} Tâches programmées
          </h1>
        </div>
        <div class="dashboard-card">
          <table class="table">
            <thead>
            <tr>
              <th>Date</th>
              <th>Message</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for job in scheduled_jobs %}
              <tr>
                <td style="white-space: nowrap" class="text-muted">
                  <small>{{ job.publishDate | ago }}</small>
                </td>
                <td>
                  <h4 class="mb1 formatted bold">{{ job.messageClass }}</h4>
                  <p>
                    {{ job.params | json_encode }}
                  </p>
                </td>
                <td>
                  <div class="hstack nowrap">
                    <form action="{{ path('admin_job_delete', {id: job.id, delayed: true}) }}" method="post">
                      <input type="hidden" name="_method" value="DELETE">
                      <button class="btn-small btn-danger">{{ icon('trash') }} Supprimer</button>
                    </form>
                  </div>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </section>
    {% endif %}

    {% if failed_jobs | length > 0 %}
    <section class="stack" style="--gap:1">
      <div class="flex">
        <h1 class="dashboard-title">
          {{ icon('warning') }} Tâches échouées
        </h1>
      </div>
      <div class="dashboard-card">
        <table class="table">
          <thead>
          <tr>
            <th>Date</th>
            <th>Message</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          {% for job in failed_jobs %}
            <tr>
              <td style="white-space: nowrap" class="text-muted">
                <small>{{ job.failedAt | ago }}</small>
              </td>
              <td>
                <h4 class="mb1 formatted"><strong>{{ job.messageClass }}</strong></h4>
                  <p>{{ job.errorMessage }}</p>
              </td>
              <td>
                <div class="hstack nowrap">
                  <form action="{{ path('admin_job_retry', {id: job.id}) }}" method="post">
                    <button class="btn-small btn-secondary">{{ icon('sync') }} Relancer</button>
                  </form>
                  <form action="{{ path('admin_job_delete', {id: job.id}) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn-small btn-danger">{{ icon('trash') }} Supprimer</button>
                  </form>
                </div>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
    {% endif %}

    <section class="stack" style="--gap: 1;">
      <div class="flex">
        <h1 class="dashboard-title">
          {{ icon('star') }} Abonnements
        </h1>
      </div>
      <div class="dashboard-card">
        <nav-tabs class="dashboard-card__tabs">
          <a href="#daily" aria-controls="daily" aria-selected="true">30 derniers jours</a>
          <a href="#monthly" aria-controls="monthly">24 Derniers mois</a>
        </nav-tabs>
        <line-chart id="daily" points="{{ days | json_encode }}" x="date" y="amount"></line-chart>
        <line-chart id="monthly" points="{{ months | json_encode }}" x="date" y="amount" hidden></line-chart>
      </div>
    </section>

    <div class="grid2">

      <!-- Commentaires -->
      <section class="stack" style="--gap:1">
        <div class="flex">
          <h1 class="dashboard-title">
            {{ icon('comments') }} Derniers commentaires
          </h1>
          {{ paginate_nav(comments) }}
        </div>
        <div class="dashboard-card stack-separated">
          {% for comment in comments %}
            <article class="dashboard-comment stack" style="--gap:1">
              <div class="flex">
                <h3>
                  <strong>
                    <a href="{{ path('admin_user_index', {q: comment.author ? comment.author.id : '#'}) }}">{{ icon('user') }} {{ comment.username }}</a>
                  </strong>,
                  {{ comment.target.title }}
                </h3>
                <ajax-delete class="dashboard-comment__delete"
                             target=".dashboard-comment"
                             url="{{ path('api_comments_delete_item', {id: comment.id}) }}">
                  {{ icon('delete') }}
                </ajax-delete>
              </div>
              <p>{{ comment.content | nl2br }}</p>
            </article>
          {% endfor %}
        </div>
      </section>

      <div class="stack-large">

        {% if reports is not empty %}
          <div class="stack">
            <h1 class="dashboard-title">
              {{ icon('comments') }} Signalements
            </h1>
            <div class="dashboard-card stack-separated">
              {% for report in reports %}
                <article class="dashboard-comment stack" style="--gap:1">
                  <div class="flex">
                    <h3>
                      <strong>{{ icon('user') }} {{ report.author.username }}</strong> a signalé
                      <strong><a href="{{ path('admin_user_index', {q: report.target.author.id}) }}">{{ icon('user') }} {{ report.target.author.username }}</a></strong> sur
                      <a href="{{ path(report.target) }}">
                        {{ report.topic ? report.topic.name : report.message.topic.name }}
                      </a>
                    </h3>
                    <ajax-delete class="dashboard-comment__delete"
                                 target=".dashboard-comment"
                                 url="{{ path('api_forum/reports_delete_item', {id: report.id}) }}">
                      {{ icon('delete') }}
                    </ajax-delete>
                  </div>
                  <p>{{ report.reason }}</p>
                </article>
              {% endfor %}
            </div>
          </div>
        {% endif %}

        <section class="stack" style="--gap: 1">
          <div class="flex">
            <h1 class="dashboard-title">{{ icon('star') }} Actions</h1>
          </div>

          <div class="dashboard-card">
            <div class="flex">
              <form action="{{ path('admin_cache_clean') }}" method="post">
                <button class="btn btn-small btn-danger">{{ icon('trash') }} Vider le cache</button>
              </form>
              <form action="{{ path('admin_spam_detect') }}" method="post">
                <button class="btn btn-small btn-secondary">{{ icon('comments') }} Détecter le spam</button>
              </form>
            </div>
          </div>

        </section>

        <!-- Notifications -->
        <section class="stack" style="--gap:1">
          <div class="flex">
            <h1 class="dashboard-title">
              {{ icon('bell') }} Notifier
            </h1>
          </div>
          <div class="dashboard-card">
            <form-notification></form-notification>
          </div>
        </section>

      </div>
    </div>

    {% if revisions is not empty %}
      <div class="dashboard-title mt2">
        {{ icon('clock') }} Révisions
      </div>
      <div class="dashboard-card">
        <table class="table">
          <thead>
          <tr>
            <th>Article</th>
            <th>Auteur</th>
            <th>Date</th>
            <th class="text-right">Actions</th>
          </tr>
          </thead>
          <tbody>
          {% for revision in revisions %}
            <tr>
              <td>
                <a href="{{ path('admin_revision_show', {id: revision.id}) }}">
                  {{ revision.target.title }}
                </a>
              </td>
              <td>{{ revision.author.username }}</td>
              <td>{{ revision.createdAt | date }}</td>
              <td>
                <div class="dashboard-actions">
                  <a href="{{ path('admin_revision_show', {id: revision.id}) }}">{{ icon('edit') }}</a>
                </div>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    {% endif %}
  </div>

{% endblock %}
