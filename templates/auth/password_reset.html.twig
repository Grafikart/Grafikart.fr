{% set headerWhite = true %}

{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
  <div class="sub-header my5">
    <div class="auth-container">
      <h1 class="auth-title fade">Mot de passe oubli√©</h1>

      {% if error %}
        <alert-message type="danger">
          {{ error.messageKey | trans(error.messageData, 'security') }}
        </alert-message>
      {% endif %}

      {{ form_start(form, {attr: {class: 'auth-form fade fade-1'}}) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn-gradient">M'envoyer les instructions</button>
      {{ form_end(form) }}
    </div>
    <waves-shape></waves-shape>
  </div>
{% endblock %}
